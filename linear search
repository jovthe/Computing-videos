def linearsearch(arr, curr_index, key):
    if curr_index == -1:
        return []

    positions = linearsearch(arr, curr_index - 1, key)

    if arr[curr_index] == key:
        positions.append(curr_index)

    return positions

data = [5, 6, 7, 8, 1, 2, 3, 4, 1, 2, 3, 4, 5, 6, 7, 8]
result = linearsearch(data, len(data) - 1, 4)
print(result)
print(len(data))
