def linearsearch(data,target):    #iterative
  result=[]
  for i in range(len(data)):
    if data[i]==target:
      result.append(i)
  if result!=[]:
    return result
  else:
    return "not found"


data=[5,6,7,8,1,2,3,4,1,2,3,4,5,6,7,8]
print(linearsearch(data,4))
print(linearsearch(data,6))
print(linearsearch(data,9))

